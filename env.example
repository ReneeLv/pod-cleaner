# Pod Cleaner Environment Variables
# Copy this file to .env and modify as needed

# Kubernetes Configuration
IN_CLUSTER=true
KUBE_CONFIG_PATH=

# Namespace Configuration
EXCLUDED_NAMESPACES=kube-system,kube-public,kube-node-lease,istio-system,cert-manager

# Pod State Configuration
HEALTHY_POD_STATES=Running,Init

# Scheduling Configuration
RUN_INTERVAL_MINUTES=10
TIMEOUT_SECONDS=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Execution Control
MAX_CONCURRENT_RUNS=1
